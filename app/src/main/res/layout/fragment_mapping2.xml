<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MappingFragment">

    <TextView
        android:id="@+id/network_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indiacastbottomcolor"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="Null"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_townDistrictState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/network_name"
        android:background="@color/indiacastbottomcolor"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="Null"
        android:textColor="@color/white" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_townDistrictState"
        android:background="@color/indiacastbottomcolor"
        app:tabMode="scrollable"
        app:tabTextColor="@color/white">

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabslayout" />

</RelativeLayout>