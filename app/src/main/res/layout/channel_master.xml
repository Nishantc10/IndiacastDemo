<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Channel Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_contractualPosition"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="CPosition:"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/edt_contractualPosition"
        android:layout_width="62dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_contractualPosition"
        app:layout_constraintStart_toEndOf="@+id/txt_contractualPosition"
        app:layout_constraintTop_toTopOf="@+id/txt_contractualPosition" />

    <TextView
        android:id="@+id/txt_position"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="LCN:"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_contractualPosition"
        app:layout_constraintStart_toEndOf="@+id/edt_contractualPosition"
        app:layout_constraintTop_toTopOf="@+id/edt_contractualPosition" />

    <EditText
        android:id="@+id/edt_position"
        android:layout_width="62dp"
        android:layout_height="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_position"
        app:layout_constraintStart_toEndOf="@+id/txt_position"
        app:layout_constraintTop_toTopOf="@+id/txt_position" />

    <TextView
        android:id="@+id/txt_LCN"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Position:"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_position"
        app:layout_constraintStart_toEndOf="@+id/edt_position"
        app:layout_constraintTop_toTopOf="@+id/edt_position" />

    <EditText
        android:id="@+id/edt_LCN"
        android:layout_width="62dp"
        android:layout_height="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_LCN"
        app:layout_constraintStart_toEndOf="@+id/txt_LCN"
        app:layout_constraintTop_toTopOf="@+id/txt_LCN" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        app:layout_constraintBottom_toBottomOf="@+id/spnr_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spnr_status" />

    <Spinner
        android:id="@+id/spnr_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_status"
        app:layout_constraintTop_toBottomOf="@+id/edt_contractualPosition" />
</androidx.constraintlayout.widget.ConstraintLayout>