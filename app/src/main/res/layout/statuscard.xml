<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

        <ImageView
            android:id="@+id/img_status"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_status" />
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/img_status"
                android:hint="Date"
                />
            <TextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/txt_date"
                android:hint="Status of the Network" />

            <TextView
                android:id="@+id/txt_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_status"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_status"
                android:hint="By abcd"
                android:paddingLeft="5dp"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/txt_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_by"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/img_status" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>